mixin contact_form 

  form.contact_form(action="../php/validate-contact-form.php", method="POST") 
    label(for="name")
      p Name:
      input(type="text", id="name", name="name", required)

    label(for="email") 
      p Email: 
      input(type="email", id="email", name="email", pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$", required)
    
    label(for="message") 
      p Message: 
      textarea(name="message", cols="30", rows="10", required) 

    label(for="pot")
      input(type="hidden", name="pot" readonly)
    button(type="submit", class="btn primary", name="submit") Send