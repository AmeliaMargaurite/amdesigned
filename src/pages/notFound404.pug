extends ../mixins/page_layout.pug
include ../components/images/image-size-fraction

block variables
	- var title = "not-found";

block content
	section
		span.section__content
			span.first
				h1 Whoops...
				span
					p Well... this is awkward. We're not sure where you were heading, but it seems that place doesn't exist.
					p Maybe it was one of these popular pages?
					ul
						li: a(href="/") Home
						li: a(href="/contact") Contact
						li: a(href="/services") Services
			span.second
				+image-size-fraction({path: 'page-not-found.jpg', alt: '', fractions: [0.75, 0.75, 0.75, 0.4, 0.4, 0.4]})
