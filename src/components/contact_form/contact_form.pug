include ../btn/btn.pug

mixin contact_form 
  form.contact_form(action="../php/validate-contact-form.php?back=/contact", method="POST") 

    label(for="subject") 
      p Subject: 
      input(type="subject", id="subject", name="subject", required, pattern="string", value="I'd like a website", title="Alphanumeric with accents allowed")
      p.warning

    label(for="name")
      p Name:
      input(type="text", id="name", name="name", required, pattern='string', title="Alphanumeric with accents allowed")
      p.warning


    label(for="email") 
      p Email: 
      input(type="email", id="email", name="email", pattern="email", required)
      p.warning
    
    label(for="message") 
      p Message: 
      textarea(name="message", id="message", cols="30", rows="10", required, title="Not allowed: equals sign, greater than or less than signs, curly or square brackets")
      p.warning


    label(for="pot", aria-hidden="true")
      input(type="hidden", name="pot" readonly)
    
    input(type="hidden", name="package-type", id="package-type")
    +btn({icon: {class: "paper-plane", side: 'right'}})(type="submit", class="primary", name="submit", onclick="console.log('test')", value="submit") Send
      
    
    script(src=require("./contact_form.ts")) 