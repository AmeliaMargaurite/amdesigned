							td(tabindex="-1", data-date="2020-02-29") 29
						tr
							td(tabindex="-1", data-date="2020-02-30") 30
							td(tabindex="-1", data-date="2020-02-31") 31
							td.disabled(tabindex="-1")
							td.disabled(tabindex="-1")
							td.disabled(tabindex="-1")
							td.disabled(tabindex="-1")
							td.disabled(tabindex="-1")

			.dialog-ok-cancel-group
				button.dialog-button.btn.mini(value="cancel") Cancel
				button.dialog-button.btn.mini(value="ok") OK
			.dialog-message(aria-live="polite")
	script(src=require("./a11y_date_input.ts"))
