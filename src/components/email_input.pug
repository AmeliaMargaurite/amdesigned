mixin email_input({name, label, required=true})
	label(for=name)
		p.label!= label
		if block
			p.disclaimer: block
		p.warning
		input.text_input&attributes(attributes)(
			type="email",
			name=name,
			id=name,
			required=required,
			aria-required=required ? "true" : "false",
			pattern="email",
			value!=`<?= $inputs['${name}'] ?>`
		)
